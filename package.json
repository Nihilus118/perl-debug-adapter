{
  "name": "perl-debugger",
  "displayName": "Perl Debugger",
  "version": "1.0.0",
  "publisher": "nihilus118",
  "description": "Debug Adapter for the Perl CLI-Debugger.",
  "author": {
    "name": "Johannes Ritter"
  },
  "license": "MIT",
  "keywords": [
    "perl",
    "debug",
    "debugger"
  ],
  "engines": {
    "vscode": "^1.64.0"
  },
  "icon": "images/mock-debug-icon.png",
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Testing"
  ],
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Nihilus118/vscode-perl-debug"
  },
  "bugs": {
    "url": "https://github.com/Nihilus118/vscode-perl-debug"
  },
  "scripts": {
    "test": "jest",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "watch": "npm run -S esbuild-base -- --sourcemap --sources-content=false --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/jest": "^29.2.2",
    "@types/node": "^18.11.8",
    "@types/unescape-js": "^1.0.0",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@vscode/debugadapter": "^1.55.0-pre.1",
    "@vscode/debugadapter-testsupport": "^1.55.0-pre.1",
    "esbuild": "^0.15.12",
    "eslint": "^8.9.0",
    "jest": "^29.2.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.5.5"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebugResolve:perl",
    "onDebugDynamicConfigurations:perl"
  ],
  "workspaceTrust": {
    "request": "never"
  },
  "contributes": {
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.perl-debug.debugEditorContents",
          "when": "resourceLangId == perl",
          "group": "navigation@1"
        },
        {
          "command": "extension.perl-debug.runEditorContents",
          "when": "resourceLangId == perl",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.perl-debug.debugEditorContents",
          "when": "resourceLangId == perl"
        },
        {
          "command": "extension.perl-debug.runEditorContents",
          "when": "resourceLangId == perl"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.perl-debug.debugEditorContents",
        "title": "Debug Perl File",
        "category": "Perl Debug",
        "enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.perl-debug.runEditorContents",
        "title": "Run Perl File",
        "category": "Perl Debug",
        "enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "breakpoints": [
      {
        "language": "perl"
      }
    ],
    "debuggers": [
      {
        "type": "perl",
        "languages": [
          "perl"
        ],
        "label": "Perl Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a perl file.",
                "default": "${workspaceFolder}/${relativeFile}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "debug": {
                "type": "boolean",
                "description": "Enable or disable debugging.",
                "default": true
              },
              "cwd": {
                "type": "string",
                "description": "Set the current working directory for the perl process.",
                "default": "${workspaceFolder}"
              },
              "perlExecutable": {
                "type": "string",
                "description": "Path to perl executable.",
                "default": "perl"
              },
              "args": {
                "type": "array",
                "description": "Arguments passed at program launch.",
                "default": []
              },
              "env": {
                "type": "object",
                "description": "Environment variables passed to the program.",
                "default": {},
                "additionalProperties": {
                  "type": "string"
                }
              },
              "trace": {
                "type": "boolean",
                "description": "Enable verbose logging of the Debug Adapter.",
                "default": false
              },
              "threaded": {
                "type": "boolean",
                "description": "Enable threaded debugging (perl -dt).",
                "default": false
              },
              "escapeSpecialChars": {
                "type": "boolean",
                "description": "If enabled special characters such as newlines and tabs will be escaped.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "perl",
            "request": "launch",
            "name": "Perl Debug",
            "program": "${workspaceFolder}/${relativeFile}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Perl Debug",
            "description": "A new configuration for debugging a perl script.",
            "body": {
              "type": "perl",
              "request": "launch",
              "name": "Perl Debug",
              "program": "^\"\\${workspaceFolder}/\\${relativeFile}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ]
  },
  "dependencies": {
    "unescape-js": "^1.1.4"
  }
}
